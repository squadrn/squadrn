{
  "version": "0.1.4",
  "workspace": [
    "./types",
    "./core",
    "./cli",
    "./plugins/channel-telegram",
    "./plugins/llm-claude",
    "./plugins/ui-terminal"
  ],
  "tasks": {
    "test": "deno test --quiet --allow-all"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "exclude": ["docs/site/"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
